<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Background="Black"
        ResizeMode="NoResize"
        FontSize="20"
        KeyDown="Window_KeyDown"
        Title="Snake" Height="700" Width="700">
    <StackPanel>
        <Grid>
            <Label x:Name="labelPause" HorizontalAlignment="Center" Visibility="Hidden" Content="Pausa" Foreground="White"/>
            <Label x:Name="labelPoints" Content="Punteggio: 0" Foreground="White"/>
        </Grid>
        <Canvas x:Name="gameCanvas" Width="600" Height="600"/>
    </StackPanel>

</Window>
